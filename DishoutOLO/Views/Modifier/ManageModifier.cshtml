@model DishoutOLO.ViewModel.AddModifierModel
@{
    ViewData["Title"] = "Manage Modifier";
}

<div class="row">
    <div class="col-xl-8 order-xl-3 ">
        <div class="card">
            <form id="myForm" action="javascript:;">
                @Html.HiddenFor(mode=>mode.Id)
                @Html.HiddenFor(mode=>mode.IsActive)
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h3 class="mb-0">Manage Modifier</h3>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ModifierName,new {@class="form-control-label"})
                                    @Html.EditorFor(model => model.ModifierName, new { htmlAttributes = new { @class = "form-control required", @Placeholder = "Modifier Name" } })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Price,new {@class="form-control-label"})
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control required", @Placeholder = "Price" } })
                                </div>
                            </div>
                        </div>

                    </div>


                </div>
                <div class="card-footer">
                    <div class="row align-items-center">
                        <div class="col-12 text-center">
                            <button type="submit" id="btn-Submit" class="btn btn-md btn-primary DefaultSuccess">
                                Save
                            </button>
                            <a href="/Modifier/Index" class="btn btn-default">Cancel</a>
                            <label id="lblError" class="inline"></label>


                        </div>
                    </div>


                </div>

            </form>

        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Assets/ManageModifier.js" asp-append-version="true"></script>
}