@model DishoutOLO.ViewModel.AddItemgroupsModel
@{
    ViewData["Title"] = "Manage Itemgroup";
}


<div class="row">
    <div class="col-xl-8 order-xl-3 ">
        <div class="card">
            <form id="myForm" action="javascript:;">
                @Html.HiddenFor(mode=>mode.Id)
                @*@Html.HiddenFor(mode=>mode.IsActive)*@

                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h3 class="mb-0">Manage ItemGroup</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ItemGroup,new {@class="form-control-label"})
                                    @Html.EditorFor(model => model.ItemGroup, new { htmlAttributes = new { @class = "form-control required", @Placeholder = "Itemgroup" } })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ItemId,new {@class="form-control-label"})
                                    @Html.DropDownListFor(f=>f.ItemId, ViewBag.ItemList as SelectList,"---SELECT-----", new { @class = "form-control required" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DisplayOrder,new {@class="form-control-label"})
                                    @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control required", @Placeholder = "Display Order" } })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row align-items-center">
                        <div class="col-12 text-center">
                            <button type="submit" id="btn-submit" class="btn btn-md btn-primary">
                                Save
                            </button>
                            <a href="/Itemgroup/Index" class="btn btn-default">Cancel</a>
                            <label id="lblError" class="inline"></label>
                        </div>
                    </div>
               </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Assets/ManageItemgroup.js" asp-append-version="true"></script>

}

