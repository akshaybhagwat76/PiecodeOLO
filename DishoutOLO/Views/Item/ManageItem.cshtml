@model DishoutOLO.ViewModel.AddItemModel

<div class="row">
    <div class="col-xl-8 order-xl-3 ">
        <div class="card">
            <form id="myForm" action="javascript:;">
                @Html.HiddenFor(mode=>mode.Id)
                @Html.HiddenFor(mode=>mode.IsActive)
                @Html.HiddenFor(mode=>mode.ItemImage)
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h3 class="mb-0">New Item</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="pl-lg-4">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Item Name", null,htmlAttributes: new { @class = "ml-1" })
                                @Html.Editor("ItemName", new { htmlAttributes = new { @class = "form-control  required", @placeholder = "Item Name" } })
                                                         
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CategoryId,new {@class="form-control-label"})
                                    @Html.DropDownListFor(f=>f.CategoryId, ViewBag.CategoryList as SelectList,"---SELECT-----", new { @class = "form-control required" })
                                </div>
                            </div>
                           <div class="col-md-12">
                                    <div class="form-group">

                                        @Html.Label("Item Description", null,htmlAttributes: new { @class = "ml-1" })

                                        @Html.TextArea("ItemDescription",new { @class = "form-control required" })
                                    </div>
                                </div>


                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-group">
                                        @Html.Label("taxrate1", null,htmlAttributes: new { @class = "ml-1" })
                                        @Html.Editor("taxrate1", new { htmlAttributes = new { @class = "form-control  required", @placeholder = "taxrate1" } })

                                    </div>  
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        @Html.Label("taxrate2", null,htmlAttributes: new { @class = "ml-1" })
                                        @Html.Editor("taxrate2", new { htmlAttributes = new { @class = "form-control  required", @placeholder = "taxrate2" } })

                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-group">
                                        @Html.Label("taxrate3", null,htmlAttributes: new { @class = "ml-1" })
                                        @Html.Editor("taxrate3", new { htmlAttributes = new { @class = "form-control  required", @placeholder = "taxrate3" } })

                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        @Html.Label("taxrate4", null,htmlAttributes: new { @class = "ml-1" })
                                        @Html.Editor("taxrate4", new { htmlAttributes = new { @class = "form-control  required", @placeholder = "taxrate4" } })

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.Label("UnitCost", null,htmlAttributes: new { @class = "ml-1" })
                                    @Html.Editor("UnitCost", new { htmlAttributes = new { @class = "form-control  required", @placeholder = "Unicost" } })

                                </div>
                            </div>


                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.Label("MSRP", null,htmlAttributes: new { @class = "ml-1" })
                                    @Html.Editor("MSRP", new { htmlAttributes = new { @class = "form-control  required", @placeholder = "MSRP" } })

                                </div>
                            </div>



                            <div class="col-md-12">
                                                                  
                                        <img src="~/Content/Item/@Model.ItemImage" />
                                                                   
                                    </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ItemImage,new {@class="form-control-label"})
                                        <input type="file" name="file" id="itemId"  />
                                    </div>
                                </div>
                            
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <div class="row align-items-center">
                <div class="col-12 text-center">
                    <button type="submit" id="btn-submit" class="btn btn-md btn-primary">
                        Save
                    </button>
                    <a href="/Item/Index" class="btn btn-default">Cancel</a>
                    <label id="lblError" class="inline"></label>
                </div>
            </div>
        </div>
    </div>
</div>






@section Scripts{
    <script src="~/Assets/ManageItem.js" asp-append-version="true"></script>

}



