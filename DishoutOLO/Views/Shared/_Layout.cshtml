    <style>
        .brand-image {
            height: 13vh;
            width: 75%;
            margin-left: 27px;
            margin-top: -10%;
        }

        .input[type="checkbox"] {
            position: relative;
            width: 85px;
            height: 30px;
            background: #bdc3c7;
            -webkit-appearance: none;
            outline: none;
            transition: .4s;
            box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
            cursor: pointer;
        }

        .input:checked[type="checkbox"] {
            background: #3498db;
        }

        .input[type="checkbox"]::before {
            z-index: 2;
            position: absolute;
            content: "";
            left: 0;
            width: 25px;
            height: 30px;
            background: #fff;
            transform: scale(1.1);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: .4s;
        }

        .input:checked[type="checkbox"]::before {
            left: 60px;
        }

        .toggle {
            position: relative;
            display: inline;
        }

        .label {
            position: absolute;
            color: #fff;
            font-weight: 600;
            font-size: 20px;
            pointer-events: none;
        }

        .onbtn {
            bottom: -2px;
            left: 15px;
        }

        .ofbtn {
            bottom: -2px;
            right: 14px;
            color: #34495e;
        }
    </style>
  
</head>
