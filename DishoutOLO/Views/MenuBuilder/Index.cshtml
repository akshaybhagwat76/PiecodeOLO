@model DishoutOLO.ViewModel.AddMenuBuilderModel

<main class="col-md-10">
    <div class="card">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>

                        <li class="nav-item">
                            <a href="/Category/Index" class="nav-link">
                                <p> Category </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Item/Index" class="nav-link">
                                <p>Item</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Itemgroup/Index" class="nav-link">
                                <p> ItemGroup </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Modifier/Index" class="nav-link">
                                <p>Modifier</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/ModifierGroup/Index" class="nav-link">
                                <p> ModifierGroup </p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


    </div>
    <main id="main">
        <!-- ======= Lifestyle Category Section ======= -->
        <section class="category-section">
            <div class="container" data-aos="fade-up">
                <div class="row g-5">
                    <div class="col-lg-12">
                        <div class="row g-5">
                            <div class="col-lg-3">
                                <div class="card" style="height: 80vh; overflow-x: auto;">
                                    <div class="card-body Menudata">
                                        <div class="post-entry-1 border-bottom">
                                            <div class="post-meta" style="text-align: center;">
                                                <a class="icon" style="top: 20px;" href="/Menu/Create" data-bs-toggle="dropdown"><i class="bi bi-plus-circle"></i></a>
                                                <span class="date">New Menu</span>
                                            </div>

                                            @foreach (var item in ViewData["menuInfolist"] as IEnumerable<DishoutOLO.ViewModel.AddMenuBuilderModel>)
                                            {
                                                <div class="post-entry-1 border-bottom">

                                                    <div class="post-meta">
                                                        <span class="date">@item.MenuName</span>
                                                    </div>
                                                    <div class="post-meta">
                                                        <span class="date">@item.Descrition</span>
                                                    </div>
                                                    <div class="post-meta">
                                                        <span class="date">@item.Week</span>
                                                    </div>
                                                    <div class="dropdown" style="float: right; top: -35px;">
                                                        <a id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="bi bi-three-dots-vertical"></i></a>
                                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                            <a class="dropdown-item" href="#"><i class="fa fa-edit"></i>&nbsp;&nbsp; Edit</a>
                                                            <a class="dropdown-item" href="#"><i class="fa fa-trash"></i>&nbsp;&nbsp; Delete</a>
                                                        </div>
                                                    </div>

                                                    <a class="icon" href="#" data-bs-toggle="dropdown">
                                                        <label class="switch">
                                                            <input type="checkbox" class="checkit">
                                                            <span class="slider round"></span>
                                                        </label>
                                                    </a>
                                                    @*                                                    <div class="post-meta"><span class="date">@item.FullTime</span></div>
                                                *@


                                                    @foreach (var p in item.ListAvaliblities)
                                                    {
                                                        <div class="post-meta"><span class="date">@p.fromtime : @p.endtime  </span></div>
                                                    }
                                                    <div class="post-meta"><span class="date"><a href="#"><i class="bi bi-chevron-down ms-auto"></i></a></span></div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <section class="section dashboard">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="card recent-sales overflow-auto" style="height: 75vh; border: 2px solid;">

                                                <div class="filter">
                                                    <a class="icon" style="top: 20px;" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots-vertical"></i></a>
                                                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                                        <li class="dropdown-header text-start">
                                                            <h6>Filter</h6>
                                                        </li>

                                                        <li><a class="dropdown-item" href="#">Today</a></li>
                                                        <li><a class="dropdown-item" href="#">This Month</a></li>
                                                        <li><a class="dropdown-item" href="#">This Year</a></li>
                                                    </ul>
                                                </div>
                                                <div class="card-body mb-5">
                                                    <h5 class="card-title ">1005 Menu</h5>
                                                    <div id="userFacets" class="facet-list">
                                                        <label>No Category Found...</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="card recent-sales overflow-auto" style="margin-left: -26px; height: 75vh; border: 2px solid;">
                                                <div class="filter">
                                                    <a class="icon" style="top: 20px;" href="/Item/Create" data-bs-toggle="dropdown"><i class="bi bi-plus-circle"></i></a>
                                                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                                        <li class="dropdown-header text-start">
                                                            <h6>Filter</h6>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="card-body">
                                                    <h2 class="card-title mb-5"> All Items </h2>
                                                    <div class="post-entry-1 border-bottom">
                                                        @foreach (var item in ViewBag.lstItems)
                                                        {
                                                            <div class="post-meta">
                                                                <span class="date">@item.ItemName</span>
                                                            </div>

                                                        }

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </section>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</main>


@section Scripts {

    <script src="~/Assets/MenuBuilder.js" asp-append-version="true "></script>
    }
